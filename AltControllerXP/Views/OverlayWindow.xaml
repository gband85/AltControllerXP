<Window x:Class="AltControllerXP.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AltController.UserControls"
        xmlns:p="clr-namespace:AltController.Properties"
        Loaded="Window_Loaded" Closing="Window_Closing" Focusable="False" ShowInTaskbar="False" IsHitTestVisible="False"
        WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" Height="300" Width="300" Title="{x:Static p:Resources.Overlay_Title}">
    <Canvas Name="ControlsCanvas" ClipToBounds="True" Background="{x:Null}">
        <local:ViewScreenRegionsControl x:Name="RegionsControl" IsDesignMode="False" CanSelectRegions="False" ShowBackground="False" ShowRegionNames="False" Background="{x:Null}" Visibility="Hidden"/>
    </Canvas>
</Window>

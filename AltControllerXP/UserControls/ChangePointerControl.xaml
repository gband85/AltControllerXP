<UserControl x:Class="AltControllerXP.UserControls.ChangePointerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:p="clr-namespace:AltControllerXP.Properties"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="330" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <RadioButton Name="StandardRadioButton" Content="{x:Static p:Resources.Action_StandardRadioButton}" Grid.Row="0" GroupName="CursorTypeButtons" VerticalAlignment="Center" Margin="0,2" IsChecked="True"></RadioButton>
        <RadioButton Name="HiddenRadioButton" Content="{x:Static p:Resources.Action_HiddenRadioButton}" Grid.Row="1" GroupName="CursorTypeButtons" VerticalAlignment="Center" Margin="0,2" ></RadioButton>
        <RadioButton Name="RestoreUserRadioButton" Content="{x:Static p:Resources.Action_RestoreUserRadioButton}" Grid.Row="2" GroupName="CursorTypeButtons" VerticalAlignment="Center" Margin="0,2" ></RadioButton>
    </Grid>
</UserControl>
